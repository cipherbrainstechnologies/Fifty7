# Streamlit Secrets Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in your actual credentials
# DO NOT commit .streamlit/secrets.toml to git (it's in .gitignore)

# ===================================================================
# Authentication Credentials (Currently Disabled - For Future Use)
# ===================================================================
[credentials]
names = ["Admin"]
usernames = ["admin"]
passwords = ["$2b$12$REPLACE_WITH_YOUR_HASHED_PASSWORD"]
# Generate password hash using: python utils/generate_password_hash.py

[cookie]
name = "nifty_auth"
key = "REPLACE_WITH_RANDOM_KEY"
expiry_days = 30
# Generate random key using: python utils/generate_password_hash.py

# ===================================================================
# Broker Configuration
# ===================================================================
[broker]
type = "angel"  # or "fyers"

# Angel One SmartAPI Configuration (Trading App)
api_key = "YOUR_API_KEY"
api_secret = "YOUR_API_SECRET"
client_id = "YOUR_CLIENT_ID"  # e.g., "BBGV1001"
username = "YOUR_USERNAME"
pwd = "YOUR_PASSWORD"
token = "YOUR_TOTP_TOKEN"
auth_token = "YOUR_TOTP_TOKEN"

# ===================================================================
# SmartAPI Applications (Trading / Historical / Publisher)
# ===================================================================
[smartapi_apps.trading]
name = "Angel One SmartAPI Trading App"
api_key = "YOUR_TRADING_API_KEY"
api_secret = "YOUR_TRADING_API_SECRET"

[smartapi_apps.historical]
name = "Angel One SmartAPI Historical Data App"
api_key = "YOUR_HISTORICAL_API_KEY"
api_secret = "YOUR_HISTORICAL_API_SECRET"

[smartapi_apps.publisher]
name = "Angel One SmartAPI Publisher App"
api_key = "YOUR_PUBLISHER_API_KEY"
api_secret = "YOUR_PUBLISHER_API_SECRET"

# ===================================================================
# Firebase Authentication Configuration
# ===================================================================
[firebase]
apiKey = "YOUR_FIREBASE_API_KEY"
authDomain = "YOUR_PROJECT_ID.firebaseapp.com"
projectId = "YOUR_PROJECT_ID"
storageBucket = "YOUR_PROJECT_ID.appspot.com"
messagingSenderId = "YOUR_MESSAGING_SENDER_ID"
appId = "YOUR_APP_ID"
databaseURL = "https://YOUR_PROJECT_ID-default-rtdb.firebaseio.com"  # Optional
measurementId = "G-XXXXXXXXXX"  # Optional (for Analytics)

# RESTRICTED ACCESS: Only this email can login (case-insensitive)
allowedEmail = "your.email@example.com"

# ===================================================================
# Database Configuration
# ===================================================================
[database]
# For local development, use your database connection string
DATABASE_URL = "postgresql://user:password@host:port/database"
PGHOST = "your-db-host"
PGPORT = "5432"
PGUSER = "postgres"
PGPASSWORD = "your-password"
PGDATABASE = "your-database"

# ===================================================================
# Production Note
# ===================================================================
# In production (Railway, Render, etc.), use environment variables instead:
# - BROKER_API_KEY, BROKER_CLIENT_ID, BROKER_PASSWORD, BROKER_TOKEN
# - FIREBASE_API_KEY, FIREBASE_PROJECT_ID, etc.
# - DATABASE_URL, PGHOST, PGPORT, etc.
# See docs/deployment/RAILWAY_ALL_ENV_VARS.md for complete list

